@model EURISTest.Models.ProductCatalog

@{
    ViewBag.Title = "Add Product";
}

<h2>Add product to this catalog</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ProductCatalog</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FKCatalogID, "Catalog")
        </div>
        <div class="editor-field">
            @Html.DropDownList("FKCatalogID")
            @Html.ValidationMessageFor(model => model.FKCatalogID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FKProductID, "Product")
        </div>
        <div class="editor-field">
            @Html.DropDownList("FKProductID", String.Empty)
            @Html.ValidationMessageFor(model => model.FKProductID)
        </div>

        <p>
            <input type="submit" value="Add" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

